<div class="row">
{{#rows}}
    <div class="col-md-12 custom-card
        {{#is_cancelled}}
            grey-card
        {{/is_cancelled}}
    "         
    id="custom-card-{{courseid}}">
        {{! This is the course details part }}
        <div class="d-flex align-items-center">
            <div>
                <img src="{{courseimage}}" class="img-fluid" alt="{{coursefullname}}"/>
            </div>
            <div class="ml-2">
                <h3 class="custom_coursename">{{coursefullname}}</h3>
                <h2 class="custom_groupname">{{groupname}}</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 section section-1">
            <div class="d-flex align-items-center status"> 
            {{! Session status : custom course field }}
                <div>
                    {{#is_cancelled}}
                        <span class="badge badge-warning badge-custom-group">
                            <i class="fas fa-calendar-times"></i>
                            {{#str}}sessionstatus_cancelled, local_customgroupsmanagement{{/str}}
                        </span>
                    {{/is_cancelled}}

                    {{#is_active}}
                        <span class="badge badge-success badge-custom-group">
                            <i class="fas fa-calendar-check"></i>
                            {{#str}}sessionstatus_maintained, local_customgroupsmanagement{{/str}}
                        </span>
                    {{/is_active}}
                </div>
                {{! Course visibility }}
                <div class="ml-2">
                    {{#visible}}
                        <i class="fas fa-eye"></i>
                        {{#str}}visible, local_customgroupsmanagement{{/str}}
                    {{/visible}}
                    {{^visible}}
                        <i class="fas fa-eye-slash"></i>
                        {{#str}}hidden, local_customgroupsmanagement{{/str}}
                    {{/visible}}
                </div>
            </div>
            <div>
                <span>
                    <b>{{#str}}location, local_customgroupsmanagement{{/str}}</b> :
                    {{#lieu}} 
                        {{lieu}} 
                    {{/lieu}}
                    {{^lieu}}
                            {{#str}}nolocation, local_customgroupsmanagement{{/str}}
                    {{/lieu}}
                </span>
            </div>
            <div>
                <a href="/course/edit.php?id={{courseid}}"target="_blank"  class="btn btn-primary"> 
                    <i class="fa fa-cog fa-fw"></i>
                    {{#str}}coursesettings, local_customgroupsmanagement{{/str}}
                </a>
            </div>  
        </div>

        {{! Section 2 }}

        <div class="col-md-3 section section-2">
            {{! Teachers and participants in the group and course }}
                     
                <p><b>{{#str}}teachers, local_customgroupsmanagement{{/str}} :</b></p>
                    <div class="d-flex align-items-center teachers-info">
                        {{#formateurs}}
                            <p class="d-flex align-items-center">
                                <a href="/user/profile.php?id={{id}}" target="_blank" class="teacher-link">
                                    <span>{{fullname}}, </span>
                                </a>    
                            </p>
                        {{/formateurs}}
                        {{^formateurs}}
                            <p><em>{{#str}}noteachersassigned, local_customgroupsmanagement{{/str}}</em></p>
                        {{/formateurs}}
                    </div>
                <p><b>{{#str}}nostudents, local_customgroupsmanagement{{/str}} :</b> {{stagiairecount}}</p>
                <div>
                    <a href="/user/index.php?id={{courseid}}" target="_blank" class="btn btn-primary"> 
                        <i class="fa-solid fa-users"></i>
                        {{#str}}participants, local_customgroupsmanagement{{/str}}
                    </a>
                </div>  
            
        </div>

        {{! Section 3 }}
        <div class="col-md-3 section section-3">
            {{! Group details }}
            <div>            
                <b>{{#str}}startdate, local_customgroupsmanagement{{/str}}</b> : {{sessionstart}}
            </div>
            <div>
                <b>{{#str}}enddate, local_customgroupsmanagement{{/str}}</b> : {{sessionend}}
            </div>
                <div>
                    <a href="/group/index.php?id={{courseid}}" target="_blank" class="btn btn-primary"> 
                        <i class="fa fa-cog fa-fw"></i>
                        {{#str}}groupsettings, local_customgroupsmanagement{{/str}}
                    </a>
                </div>  
        </div>
        {{! Section 4 }}
        <div class="col-md-3">
            {{! If there is group description show it else show a default message }}
            {{#groupdescription}}
                <p> {{groupdescription}} </p>
            {{/groupdescription}}
            {{^groupdescription}}
                <p> {{#str}}groupdescription_default, local_customgroupsmanagement{{/str}} </p>
            {{/groupdescription}}
        </div>
    </div>
</div>
{{/rows}}
</div>